<?php $ignoredPages = $user ? ['Registration', 'Login'] : ['My Account', 'Logout']; ?>

<ul class="navbar-nav mr-auto">
    <?php foreach ($this->container as $page):
        $active = $page->isActive() ? 'active' : '';
        if (in_array($page->getLabel(), $ignoredPages)) {
            continue;
        } ?>
        <li class="nav-item <?= $active ?>">
            <a class="nav-link" href="<?= $page->getHref() ?>"><?= $page->getLabel() ?></a>
        </li>
    <?php endforeach ?>
</ul>
